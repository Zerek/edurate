@using edurate.Web.Resources;
@using edurate.Web.Extensions;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Edurate</title>
    <link href="~/Content/themes/admin/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/themes/admin/css/metro.css" rel="stylesheet" />
    <link href="~/Content/themes/admin/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/themes/admin/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/themes/admin/css/style.css" rel="stylesheet" />
    <link href="~/Content/themes/admin/css/style_responsive.css" rel="stylesheet" />
    <link href="~/Content/themes/admin/css/style_default.css" rel="stylesheet" id="style_color" />
    <link href="~/Content/themes/admin/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/themes/admin/gritter/css/jquery.gritter.css" />
    <link href="~/Content/themes/admin/jqvmap/jqvmap/jqvmap.css" media="screen" rel="stylesheet" type="text/css" />

    <link href="~/Content/themes/kendoui.trial.2012.3.1315.hotfix/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/themes/kendoui.trial.2012.3.1315.hotfix/styles/kendo.metro.min.css" rel="stylesheet" />

    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="Content/themes/admin/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="Content/themes/admin/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="Content/themes/admin/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="Content/themes/admin/ico/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="Content/themes/admin/ico/favicon.png">
</head>
<body class="fixed-top">
    <div class="header navbar navbar-inverse navbar-fixed-top">
        <!-- BEGIN TOP NAVIGATION BAR -->
        <div class="navbar-inner">
            <div class="container-fluid">
            <!-- HEADER ELEMENTS GO HERE -->
                @Html.ActionLink("EDURATE", "Index", "Home", null, new { @class="brand"})
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <!-- END TOP NAVIGATION BAR -->
    </div>
    <div class="page-container row-fluid">
    <!-- BEGIN SIDEBAR -->
    <div class="page-sidebar nav-collapse collapse">
        <!-- BEGIN RESPONSIVE QUICK SEARCH FORM -->
        <div class="slide hide">
            <i class="icon-angle-left"></i>
        </div>
        <form class="sidebar-search">
            <div class="input-box">
                <input type="text" class="" placeholder="Search" />
                <input type="button" class="submit" value=" " />
            </div>
        </form>
        <div class="clearfix"></div>
        <!-- END RESPONSIVE QUICK SEARCH FORM -->
        <!-- BEGIN SIDEBAR MENU -->
        <ul>
            <li class="active">
                <a href="@Url.Action("Index", "Dashboard")">
                    <i class="icon-home"></i> @UIResource.Dashboard
                    <span class="selected"></span>
                </a>  
            </li>
            <li>
                <a href="@Url.Action("Courses", "Dashboard")">
                    <i class="icon-briefcase"></i> @UIResource.Courses
                </a>  
            </li>
            <li>
                <a href="@Url.Action("Articles", "Dashboard")">
                    <i class="icon-pencil"></i> @UIResource.Articles
                </a>  
            </li>
            <li class="has-sub">
                <a href="javascript:;" class="">
                    <i class="icon-user"></i> User Settings
                    <span class="arrow"></span>
                </a>
                <ul class="sub">
                    <li>@Html.ActionLink("Profile Setting", "Edit", "Profile", null, null)</li>
                    <li>@Html.ActionLink("Security Setting", "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })</li>
                </ul>
            </li>
        </ul>
        <!-- END SIDEBAR MENU -->
    </div>
    <!-- END SIDEBAR -->
    <div class="page-content">
        <div class="container-fluid">
            <div class="row-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    </div>
    <!-- BEGIN FOOTER -->
    <div class="footer">
        2013 © Eduarte by haydarkarrar.
        <div class="span pull-right">
            <span class="go-top"><i class="icon-angle-up"></i></span>
        </div>
    </div>
    <!-- END FOOTER -->
    
    <!-- BEGIN JAVASCRIPTS -->
    <script src="~/Content/themes/admin/bootstrap-wysihtml5/wysihtml5-0.3.0.js"></script>
    <script src="~/Content/themes/admin/js/jquery-1.8.3.min.js"></script>
    <script src="~/Content/themes/admin/breakpoints/breakpoints.js"></script>
    <script src="~/Content/themes/admin/jquery-slimscroll/jquery-ui-1.9.2.custom.min.js"></script>
    <script src="~/Content/themes/admin/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/themes/admin/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/themes/admin/bootstrap-wysihtml5/bootstrap-wysihtml5.js"></script>
    <script src="~/Content/themes/admin/js/jquery.blockui.js"></script>
    <script src="~/Content/themes/admin/js/jquery.cookie.js"></script>
    <script src="~/Content/themes/admin/js/app.js"></script>

    <script src="~/Content/themes/kendoui.trial.2012.3.1315.hotfix/js/kendo.web.min.js"></script>


    @RenderSection("scripts", required: false)
    
    <script>
        jQuery(document).ready(function () {
            //App.setPage("index");  // set current page
            App.init(); // init the rest of plugins and elements
        });
    </script>
    <!-- END JAVASCRIPTS -->
    
</body>
</html>
